
pipeline {
  agent any
	options { skipDefaultCheckout() }
    stages {
        stage('Prepare and Checkout') {
            steps {
                script {
                    env.StartTime = bat(returnStdout: true,
                    script: ''' 
                    @echo off
                    echo "%TIME%"
                    ''').trim()
                }
            
            }
        }
	stage("build") {
		steps {
			echo "${StartTime} building the application"
			bat """ @echo off
				echo %cd% """
		}
	}
	stage("test") {
		steps {
			echo 'testing the application'
		}
	}
	stage("deploy") {
		steps {
			echo 'deploying the application'
		}
	}
}
}


